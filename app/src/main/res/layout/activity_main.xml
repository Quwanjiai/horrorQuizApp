<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ghosts"
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <TextView
        android:id="@+id/QuestiovTv"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:text="@string/q1Text"
        android:textColor="@color/white"
        android:textSize="19.2dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="408dp"
        android:background="#55FFFFFF"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/WrongBTN1"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:text="@string/q1ChoiceA"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <RadioButton
            android:id="@+id/WrongBTN2"
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:text="@string/q1ChoiceB"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <RadioButton
            android:id="@+id/WrongBTN3"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:text="Stay completely still and observe the figure for a moment."
            android:textColor="@color/white"
            android:textSize="24dp" />

        <RadioButton
            android:id="@+id/WrongBTN4"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:text="Call out to the figure, trying to communicate"
            android:textColor="@color/white"
            android:textSize="24dp" />


    </RadioGroup>


    <Button
        android:id="@+id/NextBTN"
        android:layout_width="310dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/colorbuytt"
        android:text="Next Question?"
        android:textColor="@color/white"
        android:textSize="33dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Warning this test is very repetitive"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp" />

</LinearLayout>